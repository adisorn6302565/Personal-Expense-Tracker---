<Window x:Class="PersonalExpenseTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalExpenseTracker"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Personal Expense Tracker"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Setter Property="Margin"
                    Value="0,0,0,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding"
                    Value="5"/>
            <Setter Property="Margin"
                    Value="0,0,0,15"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding"
                    Value="5"/>
            <Setter Property="Margin"
                    Value="0,0,0,15"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin"
                    Value="0,0,0,15"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding"
                    Value="10,5"/>
            <Setter Property="Margin"
                    Value="0,5"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side: Input Form -->
        <Border Grid.Column="0"
                Background="#F9F9F9"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,20,0">
            <StackPanel>
                <TextBlock Text="บันทึกรายการใหม่"
                        FontSize="20"
                        FontWeight="Bold"
                        Margin="0,0,0,20"
                        Foreground="#333"/>

                <TextBlock Text="วันที่ (Date)"/>
                <DatePicker SelectedDate="{Binding CurrentDate}"/>

                <TextBlock Text="ประเภท (Type)"/>
                <ComboBox ItemsSource="{Binding TransactionTypes}"
                        SelectedItem="{Binding SelectedTransactionType}"/>

                <TextBlock Text="หมวดหมู่ (Category)"/>
                <ComboBox ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding SelectedCategory}"/>

                <TextBlock Text="จำนวนเงิน (Amount)"/>
                <TextBox Text="{Binding AmountText, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="รายละเอียด (Description)"/>
                <TextBox Text="{Binding Description}"
                        Height="60"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"/>

                <Button Content="บันทึกรายการ (Add)"
                        Command="{Binding AddCommand}"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Right Side: Data Display -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="250"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header & Filters -->
            <Grid Grid.Row="0"
                    Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                    <TextBlock Text="เดือน:"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding Months}"
                            SelectedIndex="{Binding SelectedMonthIndex}"
                            Width="120"
                            Margin="0,0,10,0"/>
                    <TextBlock Text="ปี:"
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding Years}"
                            SelectedItem="{Binding SelectedYear}"
                            Width="80"
                            Margin="0,0,10,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2"
                        Orientation="Horizontal">
                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="รายรับ"
                                FontSize="12"
                                Foreground="#4CAF50"
                                HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding TotalIncome, StringFormat=N2}"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#4CAF50"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="รายจ่าย"
                                FontSize="12"
                                Foreground="#E53935"
                                HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding TotalExpense, StringFormat=N2}"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#E53935"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="คงเหลือ"
                                FontSize="12"
                                Foreground="#FFC107"
                                HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding TotalBalance, StringFormat=N2}"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#FFC107"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Chart -->
            <Border Grid.Row="1"
                    Background="White"
                    BorderBrush="#EEE"
                    BorderThickness="1"
                    Margin="0,0,0,10"
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="สัดส่วนรายจ่าย (Expense Breakdown)"
                            FontWeight="SemiBold"
                            Foreground="#555"
                            HorizontalAlignment="Center"/>
                    <lvc:PieChart Grid.Row="1"
                            Series="{Binding Series}"
                            LegendLocation="Right"/>
                </Grid>
            </Border>

            <!-- DataGrid -->
            <DataGrid Grid.Row="2"
                    ItemsSource="{Binding Transactions}"
                    SelectedItem="{Binding SelectedTransaction}"
                      AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                    Background="White"
                    BorderThickness="1"
                    BorderBrush="#EEE">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date"
                            Binding="{Binding Date, StringFormat=dd/MM/yyyy}"
                            Width="100"/>
                    <DataGridTextColumn Header="Type"
                            Binding="{Binding Type}"
                            Width="80"/>
                    <DataGridTextColumn Header="Category"
                            Binding="{Binding Category}"
                            Width="100"/>
                    <DataGridTextColumn Header="Description"
                            Binding="{Binding Description}"
                            Width="*"/>
                    <DataGridTextColumn Header="Amount"
                            Binding="{Binding Amount, StringFormat=N2}"
                            Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment"
                                        Value="Right"/>
                                <Setter Property="Padding"
                                        Value="0,0,5,0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}"
                                            Value="รายรับ">
                                        <Setter Property="Foreground"
                                                Value="#4CAF50"/>
                                        <!-- Green -->
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Type}"
                                            Value="รายจ่าย">
                                        <Setter Property="Foreground"
                                                Value="#E53935"/>
                                        <!-- Red -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Delete Button -->
            <Button Grid.Row="3"
                    Content="ลบรายการที่เลือก (Delete Selected)"
                    Command="{Binding DeleteCommand}"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0"
                    Background="#E53935"
                    Foreground="White"
                    BorderThickness="0"/>
        </Grid>
    </Grid>
</Window>
